<div class="column quests-column">

  <form class="new-quest">
    <div>click to drop a pin on the map</div>
    <input ng-model="newQuest.lat" type="text" id="lat" placeholder="lat">
    <input ng-model="newQuest.lon" type="text" id="lon" placeholder="lon">
    <div>what is your name?</div>
    <input ng-model="newQuest.name" type="text" id="name" placeholder="name">
    <div>what is your quest?</div>
    <textarea ng-model="newQuest.quest" id="quest" placeholder="what is your quest?"></textarea>
    <div class="color-picker"> what is your favorite color?</div>
    <input ng-model="newQuest.fav_color" type="color" class="color-picker" placeholder="name">
    <button ng-click="createQuest()" class="save-button">save quest</button>
  </form>

  <div>lat: {{newQuest.lat}}</div>
  <div>lon: {{newQuest.lon}}</div>
  <div>name: {{newQuest.name}}</div>
  <div>quest: {{newQuest.quest}}</div>

  <h3>all quests</h3>

  <ul class="quests-container">

    <li ng-repeat="quest in quests" class="quest">
      <div>{{quest.lat}}</div>
      <div>{{quest.lon}}</div>
      <div><span class="bold">Name:</span> {{quest.name}}</div>
      <div><span class="bold">Quest:</span> {{quest.quest}}</div>
    </li>

  </ul>

</div>

<div class="column map-column">
  <div id="map"></div>
</div>
